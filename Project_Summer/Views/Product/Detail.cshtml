@model Project_Summer.Models.ProductDetailVM
@{
    ViewData["Title"] = "Detail";

    Layout = "~/Views/Shared/_Layout.cshtml";
 }

<!-- Single Page Header End -->
<!-- Single Product Start -->
<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="row g-4 mb-5">
            <div class="col-lg-8 col-xl-9">
                <div class="row g-4">
                    <div class="col-lg-6">
                        <div class="border rounded">
                            <a href="#">
                                <img src="~/media/products/@Model.HangHoaDetailVM.Hinh" class="img-fluid rounded" alt="Image">
                            </a>
                        </div>
                    </div>
                    

                    <div class="col-lg-6">
                        <h4 class="fw-bold mb-3">@Model.HangHoaDetailVM.TenHH</h4>
                        <p class="mb-3">Category: @Model.HangHoaDetailVM.TenLoai</p>
                        <h5 class="fw-bold mb-3">@Model.HangHoaDetailVM.GiaHH</h5>
                        <div class="d-flex mb-4">
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <p class="mb-4">@Model.HangHoaDetailVM.Mota</p>
                    <form asp-action="AddToCart" asp-controller="Cart" asp-route-idHH="@Model.HangHoaDetailVM.IdHH">
                            <div class="input-group quantity mb-5" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm text-center border-0" value="1" name="Quantity">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                          
                            <button type="submit" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ hàng </button>

                        </form>
                        
                    </div>

             
               
                  
                </div>
            </div>
       
        </div>

     
</div>
</div>
<p>@ViewBag.Message</p>
<!-- Single Product End -->
<form asp-controller="Product" asp-action="Reviews">
    <h4 class="mb-5 fw-bold">Đánh giá sản phẩm</h4>
    <div class="row g-4">

        <div class="col-lg-6">
            <div class="border-bottom rounded">
                <input asp-for="@Model.HoTen" type="text" class="form-control border-0 me-4" placeholder="Tên của bạn">
                <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="border-bottom rounded">
                <input asp-for="@Model.Email" type="email" class="form-control border-0" placeholder="Địa chỉ Email">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="border-bottom rounded my-4">
                <textarea asp-for="@Model.NoiDung" class="form-control border-0" cols="30" rows="8" placeholder="Nội dung đánh giá" spellcheck="false"></textarea>
                <span asp-validation-for="NoiDung" class="text-danger" />
            </div>
        </div>

        <input type="hidden" asp-for="HangHoaDetailVM.IdHH" />
        <div class="form-item w-100">

        </div>
        <div class="col-lg-12">
            <div class="d-flex justify-content-between py-3 mb-5">
                <div class="d-flex align-items-center">
                    <p class="mb-0 me-3">Please rate:</p>
                    <div class="d-flex align-items-center" style="font-size: 12px;">
                        <i class="fa fa-star text-muted"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                </div>
                <button type="submit" class="btn border border-secondary text-primary rounded-pill px-4 py-3"> Đăng lên</button>
            </div>
        </div>
    </div>
</form>