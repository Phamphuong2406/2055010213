@model IEnumerable<Project_Summer.DataContext.HoaDon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4>Bảng Thông tin hóa đơn bán </h4>
<a asp-controller="Order" asp-action="Create">Thêm hóa đơn</a>
<table class="table table-bordered" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mã HD</th>
            <th scope="col">Ngày đẳt</th>
            <th scope="col">Họ tên KH</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">SDT</th>            
            <th scope="col">Cach thanh toán</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Lưu ý</th>
            <th scope="col">Tùy chọn</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.MaHd</th>
                <td>@item.NgayDat</td>

                <td>@item.HoTen</td>
                <td>@item.DiaChi</td>
                <td>@item.DienThoai</td>
                <td>@item.CachThanhToan</td>
            
                <td>@if(item.MaTrangThai == 1)
                    {
                        <div>Đã giao</div>
                    }
                    else
                    {
                        <div>Đang vận chuyển</div>
                    }

                </td>
                <td>@item.GhiChu</td>
                <td>
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@item.MaHd">Chi tiết <br></a>

                    <a asp-controller="Order" class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.MaHd">Sửa</a>
                    <a asp-controller="Order" class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-route-id="@item.MaHd">Xóa</a>
                </td>
            </tr>

        }
    </tbody>
</table>


