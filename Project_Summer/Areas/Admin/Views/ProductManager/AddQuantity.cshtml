@model  Project_Summer.DataContext.SoLuongSp

@{
    ViewData["Title"] = "AddQuantity";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Thêm số lượng sản phẩm</h1>
@TempData["Message"]
<div class="col-md-9">

    <form asp-action="UpdateProductQuantity" asp-controller="ProductManager" enctype="multipart/form-data">
        <div class="form-group">
            <input type="hidden" name="MaHh" value="@ViewBag.id" />
            <label>Số lượng</label>
            <input value="1" min="1" asp-for="SoLuong" class="form-control"  />
            <span asp-validation-for="SoLuong" class="text-danger" />
        </div>

     
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Thêm số lượng</button>
        </div>
    </form>

</div>