
@model IEnumerable<Project_Summer.DataContext.HangHoa>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h4>bảng thông tin sản phẩm</h4>
<div>
    <p>@TempData["Message"]</p>
</div>
<a asp-controller="ProductManager" class="btn btn-warning btn-sm" asp-action="Create">Thêm sản phẩm</a>
<table class="table table-bordered" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Stt</th>
            <th scope="col">tên Hàng hóa</th>
            <th scope="col">Loại</th>
            <th scope="col">Hình</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Giá bán</th>
            <th scope="col">Giảm giá</th>
    
            <th scope="col">Ngày sx</th>
            <th scope="col">Hãng sx</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Tùy chọn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.MaHh</th>
                <td>@item.TenHh</td>

                <td>@item.MaLoaiNavigation.TenLoai</td>
                <td><img src="~/media/products/@item.Hinh" class="product-image" /></td>
               
                <td>@item.SoLuong |<a asp-controller="ProductManager" asp-action="AddQuantity" asp-route-id="@item.MaHh">Thêm số lượng</a> </td>
                <td>@item.DonGia</td>
                <td>@item.GiamGia</td>
              
                <td>@item.NgaySx</td>
                <td>@item.MaNccNavigation.TenCongTy</td>
                <td>@item.MoTa</td>
                <td>
                    <a asp-controller="ProductManager" class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.MaHh">Sửa</a>
                    <a asp-controller="ProductManager" class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-route-id="@item.MaHh">Xóa</a>
                </td>
            </tr>

        }
    </tbody>
</table>


