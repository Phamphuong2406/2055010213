@model IEnumerable<Project_Summer.DataContext.NhaCungCap>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h4>Bảng thông tin Các nhà cung cấp</h4>
<a asp-controller="Provider" asp-action="Create">Thêm Loại sản phẩm</a>
<table class="table table-bordered" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mã Ncc</th>
            <th scope="col">Tên Ncc</th>
            <th scope="col">Logo </th>
            <th scope="col">Liên lạc</th>
            <th scope="col">Email</th>
            <th scope="col">Điện thoại</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Tùy chọn</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.MaNcc</th>
                <td>@item.TenCongTy</td>
                <td><img src="~/img/@item.Logo" /></td>
                <td>@item.NguoiLienLac</td>
                <td>@item.Email</td>
                <td>@item.DienThoai</td>
                <td>@item.DiaChi</td>
                <td>@item.MoTa</td>

                <td>
                    <a asp-controller="Provider" class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.MaNcc">Sửa</a>
                    <a asp-controller="Provider" class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-route-id="@item.MaNcc">Xóa</a>
                </td>
            </tr>

        }
    </tbody>
</table>

