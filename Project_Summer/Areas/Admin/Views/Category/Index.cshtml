@using Project_Summer.Helper
@model IEnumerable<Project_Summer.DataContext.Loai>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    Pagination pager = new Pagination();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }

}
<h4>Bảng thông tin loại sản phẩm</h4>
<a asp-controller="Category" asp-action="Create">Thêm Loại sản phẩm</a>
<table class="table table-bordered" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mã loại</th>
            <th scope="col">Tên loại</th>
            <th scope="col">tên tìm kiếm</th>
            <th scope="col">Hình</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Tùy chọn</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.MaLoai</th>
                <td>@item.TenLoai</td>

                <td>@item.TenLoaiAlias</td>
                <td>@item.Hinh</td>
                <td>@item.MoTa</td>
                
                <td>
                    <a asp-controller="Category" class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.MaLoai">Sửa</a>
                    <a asp-controller="Category" class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-route-id="@item.MaLoai">Xóa</a>
                </td>
            </tr>

        }
    </tbody>
</table>

<partial name="_Paging" model="@pager"/>

