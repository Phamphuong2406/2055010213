@model Project_Summer.DataContext.Loai
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Thay đổi thông tin Loại</h1>
@TempData["Message"]
<div class="col-md-9">
    <form asp-action="Edit" asp-controller="Category" enctype="multipart/form-data">
        <div class="form-group">
            <label>Tên Loại</label>
            <input asp-for="TenLoai" class="form-control" />
            <span asp-validation-for="TenLoai" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Tên Loại tìm kiếm</label>
            <input asp-for="TenLoaiAlias" class="form-control" />
            <span asp-validation-for="TenLoaiAlias" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Hình</label>
            <input asp-for="Hinh" class="form-control" />
            <span asp-validation-for="Hinh" class="text-danger" />
        </div>


        <div class="form-group">
            <label>Mô tả</label>
            <textarea asp-for="MoTa" class="form-control"></textarea>
            <span asp-validation-for="MoTa" class="text-danger" />
        </div>
        <div class="form-group ">
            <button type="submit" class="btn btn-primary ">Lưu sản phẩm</button>
        </div>

    </form>

</div>
